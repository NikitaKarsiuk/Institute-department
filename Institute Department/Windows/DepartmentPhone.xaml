<Window x:Class="Institute_Department.Windows.DepartmentPhone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Institute_Department.Windows"
        mc:Ignorable="d"
        Title="" Height="140" Width="310"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Label>Телефон</Label>
                <TextBox x:Name="PhoneTextBox" Margin="23, 0, -223, 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0"/>
            <Button x:Name="SaveButton" Style="{StaticResource Button}" Click="SaveButton_Click" Content="Сохранить" />
        </StackPanel>
    </Grid>
</Window>
