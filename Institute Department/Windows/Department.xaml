<Window x:Class="Institute_Department.Windows.Department"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Institute_Department.Windows"
        mc:Ignorable="d"
        Title="" Height="170" Width="315"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Label>Кафедра</Label>
                <TextBox x:Name="NameTextBox" Margin="29, 0, -229, 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label>Факультет</Label>
                <ComboBox x:Name="FacultyComboBox" DisplayMemberPath="Name" Width="200" Margin="21,0,0,0">
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0"/>
            <Button x:Name="SaveButton" Style="{StaticResource Button}" Content="Сохранить" Click="SaveButton_Click" />
        </StackPanel>
    </Grid>
</Window>
