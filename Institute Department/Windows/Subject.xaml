<Window x:Class="Institute_Department.Windows.Subject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Institute_Department.Windows"
        mc:Ignorable="d"
        Title="" Height="115" Width="265"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Label>Дисциплина</Label>
                <TextBox x:Name="NameTextBox" Margin="0, 0, -160, 0"/>
            </StackPanel>

            <Button x:Name="SaveButton" Margin="0,5,0,0" Style="{StaticResource Button}" Click="SaveButton_Click" Content="Сохранить" />
        </StackPanel>
    </Grid>
</Window>
